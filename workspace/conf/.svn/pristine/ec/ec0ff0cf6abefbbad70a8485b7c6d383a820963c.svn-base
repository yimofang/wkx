@charset "utf-8"
*{margin:0;padding:0;}
/*nav*/
.nav{
	width:100%;
	height:0.8rem;
	background:#fff;
	margin-top: 0.88rem;
	font-size:0.28rem;
}
.nav div{
	width: 90%;
	height:0.8rem;
	line-height: 0.8rem;
	text-align: center;
	margin:0 auto;	
}
.nav div span{
	display:inline-block;
	width:2.2rem;
	height:0.8rem;
}
#signIn{
	float:left;
	margin-left: 0.47rem;
}
#checkOn{
	float:right;
	margin-right: 0.47rem
}
.nav div span.current{
	color:#bd0f10;
	border-bottom: 0.04rem solid #bd0f10;
}
/*code*/
.code{
	width:100%;
	height: 8.56rem;
	margin-top:0.24rem;
	font-size:0.28rem;
}
.code div{
	width:90%;
	height:8.56rem;
	text-align: center;
	margin:0 auto;
	background:#fff;
}
.code div p{
	line-height: 0.52rem;
}
.code div img{
	width:4.36rem;
	height:4.36rem;
	margin:1.28rem 1.28rem 1.21rem;
	
}
/*submit*/
.btn{
	width:100%;
	height:0.98rem;
	margin-top:0.68rem;
}
.btn input{
	width:90%;
	height:0.98rem;
	margin-left:5%;
	background:#1b1b1b;
	color:#fff;
	border-radius:0.1rem;
	font-size:0.28rem;
}