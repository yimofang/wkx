@charset "utf-8";
*{margin:0;padding:0;}
.data{margin-top: 0.88rem;width:100%;height:auto;background:#fff;}
.data ul{width:90%;height:auto;padding:5%;}
.data ul li{height:1.7rem;width:100%;line-height: 1.7rem;}
.data ul li a{float:left;width: 90%;overflow: hidden;}
.data .DataInfo{float:left;width:4rem;height: auto;}
.data ul li img{float: left;width: 1.6rem;}
.data .dataDelBtn{background: url(../img/false.png) no-repeat;background-size: cover;width: 0.3rem;height: 0.3rem;border: none;float: right; margin-top: 0.25rem;}
.data .DataInfo p{padding-left:0.25rem; margin-top: 0.15rem;line-height: 0.34rem;font-size: 0.26rem;}
.Ove{overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.data .dataInfo .dataTitle{font-size: 0.26rem;line-height: 0.42rem;color: rgb(51,51,51); }
.data .dataInfo .dataNum span{float: left;margin-right: 0.1rem;}
.data .dataInfo .dataNum .dataLook{width: 0.29rem;height: 0.2rem;margin-top: 0.06rem;background: url(../img/look.png) no-repeat;background-size: cover;}
.data .dataInfo .dataNum .dataShare{width: 0.24rem;height: 0.24rem;background: url(../img/share.png);margin-top: 0.04rem;margin-left: 0.2rem;background-size: cover;}
/*dataDetail页面*/
.ppt{width:100%;height:auto;margin:1.12rem 0;z-index: 1}
.ppt div{width: 90%;height: auto;margin:0 5%;}
.ppt div ul li{position: relative;width:6.86rem;height: 3.85rem;border:none;border-radius: 0.1rem;overflow: hidden;margin-bottom: 0.26rem;box-shadow: 0 0.1rem 0.1rem #cccdcd;z-index: 999;}
.ppt div ul li img{width:6.86rem;height: 3.85rem;}
.ppt div ul li span{position: absolute;width:1.5rem;height:0.58rem;line-height: 0.58rem;text-align: center;background:rgba(0,0,0,.3);font-size: 0.24rem;z-index:1000;border-radius: 0.1rem;color:#fff;top:0;left:0;}
.download{position: fixed;width:100%;height:0.88rem;line-height: 0.88rem;text-align: center;background: #1b1b1b;color: #fff;font-size:0.32rem;margin-top: 0.7rem;bottom:0;z-index: 1000;}