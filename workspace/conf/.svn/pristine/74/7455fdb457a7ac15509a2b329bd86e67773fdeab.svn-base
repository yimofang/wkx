            type: 'post',
            url: Urlstr + 'confsFlow_web/delete_flow.do',
            data: {
                flowid: $(this).attr('data-id'),
                token: Token
            },
            dataType: 'json',
            success: function (res) {
                if (res.error == 0) {
                    $('#flow_list_all .fInfoList:eq(' + index + ')').remove();
                    alert(res.msg);
                    if ($('#flow_list_all .fInfoList').length > 0) {
