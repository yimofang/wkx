.up_imgbtn{
    padding: 25px;
    position: relative;
}
.up_imgbtn img{
    display: block;
    width: 250px;
    height: 180px;
}
.up_imgbtn input{
    position: absolute;
    top: 0;
    left: 25px;
    display: block;
    width: 250px;
    height: 180px;
    opacity: 0;
}
.upimg_tit{
    font-size: 16px;
    line-height: 40px;
    padding: 0 25px;
}
.upimg_list{
    width: 100%;
    padding: 25px;
    overflow: hidden;
    box-sizing: border-box;
}
.upimg_list li{
    float: left;
    width: 200px;
    height: 300px;
    margin-right: 15px;
    position: relative;
}
.upimg_list li img{
    width: 100%;
    height: 100%;
}
.upimg_list li .img_caozuo{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
}
.upimg_list li:hover .img_caozuo{
    display: block;
}
.upimg_list li .img_caozuo span{
    display: block;
    width: 150px;
    height: 50px;
    line-height: 50px;
    margin: 60px auto;
    text-align: center;
    border-radius: 10px;
    cursor: pointer;
}
.upimg_list li .img_caozuo span.img_look{
    background: #fff;
    color: #da0e00;
}
.upimg_list li .img_caozuo span.img_det{
    background: #da0e00;
    color: #fff;
}

.img_lookbig{
    display: none;
  position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
    z-index: 99999;
    overflow-y: scroll;
}
.img_lookbig img{
    position: absolute;
    top: 5%;
    left: 50%;
    transform: translate(-50%,0%);
    display: block;
    width: 50%;
    height: auto;
}
.guanbi{
    position: fixed;
    top: 0;
    right: 0;
    display: block;
    width: 60px;
    height: 60px;
    background: url(../img/close2.png) no-repeat;
    background-size: 100% 100%;
}











