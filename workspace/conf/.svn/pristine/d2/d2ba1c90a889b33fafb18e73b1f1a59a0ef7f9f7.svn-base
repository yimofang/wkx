*{padding:0;margin:0;}
body{width:100%;height:100%;background:url(../img/signBG.png) no-repeat;background-size: cover;z-index:1;}
.descript{width:60%;color:#fff;z-index: 999;text-align: center;margin:2.18rem auto 0;}
.descript .p1{font-size:0.8rem;text-align: center;line-height: 1.36rem;}
.descript .p2{font-size:0.3rem;text-align: center;border-top: 0.02rem solid #fff;line-height: 0.52rem;padding-top:0.1rem;}
.descript .p3{font-size:0.3rem;text-align: center;border-bottom: 0.02rem solid #fff;line-height: 0.52rem;padding-bottom:0.1rem;}

.write{width:70%;height:2rem;margin:1.6rem auto 0;z-index: 999;}
.write ul li{width:90%;height:0.9rem;padding:0 5%;line-height: 0.9rem;background:rgba(255,255,255,0.3);border-radius: 0.1rem;margin-bottom: 0.64rem}
.write ul li.signOn{background:#1b1b1b;font-size:0.32rem;color:#fff;text-align: center;}
.write .nameTxt{width:20%;display: inline-block;color:#fff;font-size:0.3rem;background:url(../img/siName.png) no-repeat left center;background-size:0.4rem 0.44rem;padding-left:0.5rem;text-align: right;}
.write .pwTxt{width:20%;display: inline-block;color:#fff;font-size:0.3rem;background:url(../img/siPhone.png) no-repeat left center;background-size:0.3rem 0.44rem;padding-left:0.5rem;text-align: right;}
.name input{width: 65%;font-size:0.28rem;background:rgba(0,0,0,0);float:right;margin-top: 0.26rem;color:#fff;}
.phone input{width: 65%;font-size:0.28rem;background:rgba(0,0,0,0);float:right;margin-top: 0.26rem;color:#fff;z-index: 1000;}
.write .nameTxt i{width:0.3rem;height:0.01rem;display: inline-block;}