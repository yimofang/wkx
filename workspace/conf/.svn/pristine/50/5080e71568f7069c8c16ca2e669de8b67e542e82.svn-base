.tx {
	width: 100px;
	height: 100px;
	overflow: hidden;
	margin: auto;
	position: relative;
	cursor: pointer;
	display: block;
	*display: inline;
	*zoom: 1
}

.tx img {
	width: 100%;
	height: 100%;
}

.tx input {
	width: 100px;
	height: 100px;
	position: absolute;
	font-size: 100px;
	right: 0;
	top: 0;
	opacity: 0;
	filter: alpha(opacity = 0);
	cursor: pointer
}