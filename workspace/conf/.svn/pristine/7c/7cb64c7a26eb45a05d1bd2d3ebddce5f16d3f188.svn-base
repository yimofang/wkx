@charset "utf-8";
*{margin:0;padding:0;}
/*nav*/
.nav{
	width:100%;
	height:0.9rem;
	background:#fff;
	margin-top: 0.88rem;
	font-size:0.28rem;
}
.nav div{
	width: 90%;
	height:0.8rem;
	line-height: 0.8rem;
	text-align: center;
	margin:0 auto;	
}
.nav div span{
	display:inline-block;
	width:2.2rem;
	height:0.8rem;
}
#signIn{
	float:left;
	margin-left: 0.47rem;
}
#checkOn{
	float:right;
	margin-right: 0.47rem
}
.nav div span.current{
	color:#bd0f10;
	border-bottom: 0.04rem solid #bd0f10;
}
/*code*/
.code{
	position: absolute;
	width:100%;
	/*height: 100%;*/
	font-size:0.28rem;
	background-size: cover;
	/*top:1.72rem;*/
}

.code div{
	position: absolute;
	width:100%;
	/*height:100%;*/
	text-align: center;
	margin:0 auto;
	top:1.133333rem;
}

.code div img{
	width:3.573333rem;
	height: 3.573333rem;
	margin:0.2rem auto 0;
}
.code>img{

	width:100%;
	height: 100%;

}

/*submit*/
.btn{
	width: 90%;
	height: 0.98rem;
	line-height: 0.98rem;
	text-align: center;
	margin: 0.68rem auto 0;
	color: #fff;
	border-radius: 0.1rem;
	font-size: 0.28rem;
	background: #000;
}
.btn input{
	width:90%;
	height:0.98rem;
	margin-left:5%;
	background:#1b1b1b;
	color:#fff;
	border-radius:0.1rem;
	font-size:0.28rem;
}
.n_tit{
	font-size: 18px;
	color:#333;
	font-weight: bold;
	width:4.266667rem;
	height:0.6rem;
	line-height:0.426667rem; 
	padding-top:0.693333rem;
	padding-bottom:0.266667rem;
	margin:0 auto;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;

}
.n_host,.n_address,.n_time{
	font-size: 14px;
	color:#333;
	width:4.266667rem;
	line-height: 0.52rem;
	text-overflow: ellipsis;
	overflow:hidden;
	white-space: nowrap;
	margin:0 auto;
}
.n_host{
	padding:0.266667rem 0 0 0;
}
.p1,.p2{
	font-size: 10px;
	color:#868997;
	line-height:0.32rem
}