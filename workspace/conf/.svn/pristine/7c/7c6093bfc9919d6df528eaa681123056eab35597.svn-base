	<!--briefBtn-->
	<!--<div class="briefBtn">分享</div>-->
	<div id="reqtoken" class="reqtoken"></div>
	<script>
		$(function () {
			$.ajax({
				type:'post',
				url:Urlstr + 'confsbrief_web/getinfo.do',
