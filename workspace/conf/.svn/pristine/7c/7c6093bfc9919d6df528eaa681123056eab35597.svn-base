       //                          html2+=`<img src="${Urlstr}upload/${imglist[i]}">`
							// }
							// $('.briefContentimg').html(html2);
       //                  }
					}else if(res.error == 5){
					    alert(res.msg);
					    ReqToken();
					}else{
					    alert(res.msg)
					}
                }
			})
        })
        //token
        function ReqToken() {
            $('#reqtoken').load("login3.html",function() {
                $('#reqtoken').show();
            });
        }
	</script>
