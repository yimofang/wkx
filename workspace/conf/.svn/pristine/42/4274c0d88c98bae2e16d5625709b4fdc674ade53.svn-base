@charset "utf-8";
*{margin:0;padding:0;}
body{position: relative;}
/*nav*/
.nav{
	width:100%;
	height:0.88rem;
	background:#fff;
	font-size:0.28rem;
	text-align: center;
}
.nav span{
	display: inline-block;
    height: 0.8rem;
    line-height: 0.8rem;
    width: 30%;
}

.nav span.current{
	color:#bd0f10;
	border-bottom: 0.04rem solid #bd0f10;
}

/*code*/
.code{
	position: absolute;
	bottom: 0;
	top: 0.88rem;
	width:100%;
	font-size:0.28rem;
	background-size: cover;
}
.code div{
	position: absolute;
	width:100%;
	/*height:100%;*/
	text-align: center;
	margin:0 auto;
	top:1.5rem;
}

.code div img{
	width:3.573333rem;
	height: 3.573333rem;
	margin:0 auto;
}
.code>img{

	width:100%;
	height: 100%;

}

/*submit*/
.btn{
	width: 90%;
	height: 0.98rem;
	line-height: 0.98rem;
	text-align: center;
	margin: 0.68rem auto 0;
	color: #fff;
	border-radius: 0.1rem;
	font-size: 0.28rem;
	background: #000;
}
.btn input{
	width:90%;
	height:0.98rem;
	margin-left:5%;
	background:#1b1b1b;
	color:#fff;
	border-radius:0.1rem;
	font-size:0.28rem;
}
.n_tit{
	    font-size: 0.4rem;
    font-weight: bold;
    width: 4.5rem;
    max-height: 0.92rem;
    line-height: 0.46rem;
    margin: 0.3rem auto;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;

}
.n_host,.n_address,.n_time{
	font-size: 14px;
	color:#333;
	width:4.266667rem;
	line-height: 0.52rem;
	text-overflow: ellipsis;
	overflow:hidden;
	white-space: nowrap;
	margin:0 auto;
}

.p1,.p2{
	font-size: 10px;
	color:#868997;
	line-height:0.32rem
}