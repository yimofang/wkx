/*发布会议*/

.Release .UploadImg{width: 100%;height: 3.2rem;position: relative;overflow:hidden}
.UploadImg #preview{width:100%;height:100%;background:#f9f9f9;}
#preview img{width:100%;height:100%; background-size: cover;}
.UploadImg .Upload{display:block;width:100%;position:absolute;top:0;left:0;bottom:0;right:0;margin:auto;opacity: 0;}
.UploadImg i{display: block;width: 0.62rem;height: 0.62rem;margin:0.98rem auto 0;background: url(../img/spric.png) no-repeat 0 -5rem;background-size: 10rem;}
.UploadImg p{line-height:0.6rem;font-size: 0.3rem;text-align: center;}
.MeetingInfo ul{padding: 0 0.32rem;margin-bottom: 0.16rem;background: #fff;}
.MeetingInfo ul li{overflow: hidden;height:0.86rem;border-bottom: 0.01rem solid #efefef;}
.MeetingInfo ul li:last-child{border-bottom: 0;}
.MeetingInfo ul li span{float: left;width: 35%;height: 0.85rem;line-height: 0.87rem;font-size: 0.28rem;color: #333;}
.MeetingInfo ul li span b{color: #bd0f10;}
.MeetingInfo ul li select,.MeetingInfo ul li p{float: right;width: 60%;height: 0.85rem;line-height: 0.87rem;font-size:0.28rem;color:#868997;text-align: right;}
.MeetingInfo ul li input{float: right;width: 60%;height: 0.35rem;padding: 0.25rem 0;font-size: 0.28rem;color: #868997;text-align: right;}
.MeetingInfo ul li select{direction: rtl; background: #fff;appearance:none;-moz-appearance:none;-webkit-appearance:none;}
.MeetingInfo ul li select option{direction: ltr;color:#868997;}
.MeetingInfo ul li p{padding-right: 0.3rem;position: relative;}
.MeetingInfo ul li p s{position:absolute;right:0;top:0;width: 0.1rem;height: 0.85rem;background: url(../img/spric.png) no-repeat 0 0.32rem;background-size: 10rem;}
.submit{height:1rem;line-height:1rem;margin: 0.44rem 0.32rem 1.5rem;border-radius:0.08rem;font-size: 0.32rem;color: #fff;background: #1b1b1b;text-align: center;box-shadow: 0 0.05rem 0.05rem #cdcdcd;}
.Modal{position: fixed;top: 0;bottom: 0;left: 0;right: 0;background: #fafafa;transition: top .3s linear;}
#meetType span:nth-child(2){float:right;color:#868997;text-align: right;padding-right: 0.29rem;background: url(../img/more.png) no-repeat;background-position: right;background-size: 0.1rem 0.18rem;}
.MeetingInfo ul li:nth-child(3) span:nth-child(2),.MeetingInfo ul li:nth-child(4) span:nth-child(2){float:right;color:#868997;text-align: right;width:auto;}

/*发布成功*/
.success{width:100%;height: auto;margin-top:0.88rem;padding-top:0.24rem;}
.success div{width:90%;height:auto;margin:0 auto;background:#fff;}
.success .sucCode{width:90%;height:5.5rem;line-height: 5.5rem;text-align: center;}
.success .sucCode img{width:3.2rem;height:3.2rem;}
.success .sucShare{color:#868997;width:100%;text-align: center;font-size:0.26rem;}
.success .sucShare span:nth-child(2){margin:0 0.2rem;}
.success .sucMore{width:90%;height:2.75rem;padding:0 5%;text-align: center; line-height: 2.75rem;margin-top: 0.5rem;}
.success .sucMore ul{width: 90%;padding: 0 5%;}
.success .sucMore ul li{text-align:center;width:25%;height:1.4rem;float:left;text-align: center;}
.success .sucMore ul li:nth-child(1){background: url(../img/shareF1.png) no-repeat;background-size: 1rem 1.4rem;background-position: center;}
.success .sucMore ul li:nth-child(2){background: url(../img/shareW1.png) no-repeat;background-size: 1rem 1.4rem;background-position: center;}
.success .sucMore ul li:nth-child(3){background: url(../img/shareQ1.png) no-repeat;background-size: 1rem 1.4rem;background-position: center;}
.success .sucMore ul li:nth-child(4){background: url(../img/shareL1.png) no-repeat;background-size: 1rem 1.4rem;background-position: center;}


/*button*/
.btn{width:100%;height: auto;margin-top: 0.65rem;}
.btn div{width:90%;height:0.98rem;line-height: 0.98rem;text-align: center;border-radius: 0.1rem;margin-left: 5%;}
.btnManage{background: #000;margin-bottom:0.16rem;}
.btnPreview{background: #bd0f10;}
.btn a{color:#fff;font-size:0.32rem;}










