    </div>

	<div id="reqtoken" class="reqtoken"></div>
    <script>
        var page = 1;
        $(function () {
            showMsgList(page);

        //     //微信浏览器去头部
        //     var ua = navigator.userAgent.toLowerCase();
        // 　　var isWeixin = ua.indexOf('micromessenger') != -1;
        // 　　if (isWeixin) {
        //         //消息中心
        //         $(".msgList").css('margin-top','0.2rem');
        //    　　 return true;
        // 　　}else{
        //    　　 return false;      
        // 　　}

        });
        //消息中心
        function showMsgList(a){ //a:页数
            // $(".infoCenterCon").show();
            // $(".myself").hide();
            $.ajax({
                type:'post',
                url:Urlstr + 'msg_web.do',
                data:{
                    display:10,
                    page:a,
                    token:Token
                },
                dataType:'json',
                success:function(res){
                    if(res.error == 0){
                        var infoCenList = res.row;
                        if(infoCenList.length == 0){

                        }else{
                            var htmlstr = '';
                            for(var i=0;i<infoCenList.length;i++){
                                htmlstr += `<div class="msgListCon">
										<ul>
											<li class="msgTitle">
												<p>${infoCenList[i].title}</p>
											</li>
											<li class="msgTD">
												<span class="msgTime">${infoCenList[i].createtime}</span>
												<span class="msgDele"></span>
											</li>
										</ul>
									</div>`;
                            }
                            $(".msgList").html(htmlstr);
                        }
                    }else if(res.error == 5){
                        ReqToken();
                        alert(res.msg);
                    }else{
                        alert(res.msg);
                    }
                }

            });
        }
    </script>
</body>
