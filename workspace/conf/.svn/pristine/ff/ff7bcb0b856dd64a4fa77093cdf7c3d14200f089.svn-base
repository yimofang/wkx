/*图文混排*/
.publish-article-content{
        padding: 15px 0;
    background: #fff;
    position: relative;
    width: 90%;
    margin: 0 auto;
    }
    .article-content{
        min-height: 3rem;
        max-height: 6rem;
        background: #f5f5f5;
        padding:0.1rem;
        border-radius: 0.08rem;
        user-select: text;
        overflow-y: auto;
        outline: none;
        cursor: text;
        margin-bottom: 1.2rem;
        
    }
    .article-content img{
    	margin-bottom: 0.2rem;
    }
    .article-content>div{
      color:#67686a;
