/*checkbox样式修改*/
input{outline: none}
input[type=checkbox]{
    width:0.3rem;
    height:0.3rem;
    display: inline-block;
    appearance:none;
    -webkit-appearance:none;
    /*margin: -0.2rem 0.1rem 0.2rem 0;*/
}
.artList input{
	margin: -0.2rem 0.1rem 0.2rem 0;
}
input[type=checkbox]:after{
    content:'';
    width: 0.3rem;
    height:0.3rem;
    background: url(../img/ck1.png);
    background-size:cover;
    display: inline-block;
}
input[type=checkbox]:checked:after  {
    width: 0.3rem;
    height:0.3rem;
    background: url(../img/ck2.png);
    background-size:cover;
    display: inline-block; 
}
.upload{
