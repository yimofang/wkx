/*addImg*/
.container {
    width: 100%;
    height: 100%;
    overflow: auto;
    clear: both;
}
.container>p{
  	width: 90%;
    height: 0.65rem;
    line-height: 0.65rem;
    font-size: 0.24rem;
    margin: 0 5%;
}
.z_photo {
    width: 90%;
    height: 1rem;
    padding: 0.3rem 5%;
    overflow: auto;
    clear: both;
    margin: 0 auto;
    background:#fff;
}

