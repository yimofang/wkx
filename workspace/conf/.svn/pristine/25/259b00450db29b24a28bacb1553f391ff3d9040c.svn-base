@charset "UTF-8"
*{margin:0;padding: 0}
/*brief页面*/
.article{
	width:100%;
	height:auto;
	margin-top: 0.88rem;
	background:#fff;
}
.article a .artContent{
	width: 90%;
    height: 2.2rem;
    border-bottom: 0.01rem solid #efefef;
    margin: 0 auto;
    padding-top: 0.3rem;
}
.artContent p:nth-child(1){
	font-size: 0.3rem;
    font-weight: 600;
    line-height: 0.5rem;
    overflow: hidden;
}
.artContent p:nth-child(2){
	font-size: 0.24rem;
    width: 100%;
    line-height: 0.35rem;
}
.artContent p:nth-child(3){
	color: #868997;
    font-size: 0.22rem;
    line-height: 0.4rem;
}
.submit{
	position: fixed;
	width: 100%;
	height:0.9rem;
	bottom:0;
}
.submit div{
	float: left;
	width: 50%;
	height: 100%;
	line-height: 0.9rem;
	text-align: center;
	font-size: 0.3rem;
	color: #fff;
}
.submit a div:first-child{
	background: #000;
}
.submit a div:last-child{
	background: #bd0f10;
}

/*briefDetails页面*/
.briefTitle{
	width:100%;
	height:1.8rem;
	margin-top: 0.88rem;
	text-align: center;
	position: relative;
	background: #fff;
}
.briefTitle div{
	width:90%;
	height:1.42rem;
	text-align: center;
	margin:0.19rem 5%;
	position: absolute;
}
.briefTitle div p:first-child{
	font-size:0.30rem;
	font-weight: 600;
	margin-bottom: 0.33rem;
}
.briefTitle p:last-child{
	font-size:0.26rem;
	text-align: center;
}

.briefContent{
	width:100%;
	height:auto;
	background:#fff;
	padding-bottom:0.8rem;
	margin-bottom: 0.67rem
}
.briefContent div{
	width:90%;
	height:auto;
	margin:0 auto;
}
.briefContent div p{
	text-indent: 2em;
	font-size:0.26rem;
	line-height: 0.6rem;
}
/*briefBtn*/
.briefBtn{
	position: relative;
	width: 100%;
	height:0.88rem;
	line-height: 0.88rem;
	text-align: center;
	background:#1b1b1b;
	color:#fff;
	font-size: 0.3rem;
	bottom: 0;
}


/*briefArticle页面*/
/*header*/
.Header a.articleNext,.Header a.mediaNext{
	position: relative;
    float: right;
    width: 1rem;
    height: 0rem;
    margin-right: 0.24rem;
    color: #fff;
    font-size:0.32rem;
}
/*articleChoice*/
.articleChoice{
	width:100%;
	height:0.64rem;
	line-height: 0.64rem;
	font-size:0.26rem;
	color:#868997;
	margin-top:0.88rem;
}
.articleChoice p{
	width:90%;
	height:0.64rem;
	margin:0 auto;
}
/*articleList*/
.articleList{
	width:100%;
	height:auto;
	background: #fff;
}
.articleList>div{
	width:90%;
	height:2.2rem;
	padding:0 5%;
}
.articleList div .listLeft{
	position:relative;
	display: block;
	width:0.3rem;
	height:2.2rem;
	line-height: 2.2rem;
	float:left;
	margin-right: 0.2rem;
}
.listLeft .inputCheck{
	position: absolute;
    width:0.26rem;
    height:0.26rem;
    visibility: hidden;
}
.listLeft .inputCheck+label{
	display: inline-block;
    width:0.26rem;
    height:0.26rem;
    border:0.02rem solid #dedede;
    border-radius: 0.1rem;
}
.listLeft .inputCheck:checked+label{
    background:url(../img/checkbox.png) no-repeat center center;
    background-size: 0.3rem 0.3rem;
    border:0.02rem solid #1b1b1b;
}
.articleList .listRight{
	width:6.2rem;
	height:2.2rem;
	float:left;
	/*padding:0.3rem 0;*/
	border-bottom:0.01rem solid #efefef;
}
.listRight p:nth-child(1){
	font-size: 0.28rem;
	font-weight: 600;
	margin-top:0.2rem;
	line-height: 0.5rem;
}
.listRight p:nth-child(2){
	font-size: 0.24rem;
	line-height: 0.35rem;
}
.listRight p:nth-child(3){
	font-size: 0.22rem;
	color: #868997;
    line-height: 0.4rem;
}
a.articleNext div{
	width:90%;
	height:0.98rem;
	line-height:0.98rem;
	text-align:center;
	margin:0.5rem 5% 0; 
	background:#1b1b1b;
	font-size:0.32rem;
	color:#fff;
	border-radius: 0.08rem;
}

/*briefMedia页面*/
/*mediaNav*/
.mediaNav{
	width:100%;
	height:0.79rem;
	line-height: 0.79rem;
	font-size:0.3rem;
	margin-top: 0.88rem;
	background: #fff;
	border-bottom:0.01rem solid #efefef;
}
.mediaNav .current{
	border-bottom: 0.04rem solid #bd0f10;
}
.mediaNav span{
	display: inline-block;
	width:1.8rem;
	height: 0.76rem;
	text-align: center;
}
.mediaNav span:first-child{
	margin-left: 1rem;
}
.mediaNav span:last-child{
	margin-right: 1.3rem;
	float:right;
}
/*mediaHot*/
.mediaHot,.mediaPackage{
	width:100%;
	height:auto;
	background:#fff;
	font-size:0.28rem;
}

.mediaHot ul li,.mediaPackage ul li{
	width:100%;
	height:1.5rem;
	line-height: 1.5rem;
	border-bottom:0.01rem solid #efefef;
}
.mediaHot ul li div,.mediaPackage ul li div{
	float:left;
}
.mediaHot ul li div:first-child,.mediaPackage ul li div:first-child{
	float:left;
	margin-left:1rem;
}
.mediaHot ul li div:last-child{
	float:right;
	margin-right:1.5rem;
}
input{
	width:0.3rem;
	height:0.3rem;
}

/*briefConfirm页面*/
.chooseArticle{
	margin-top: 0.88rem;
	height:0.66rem;
	width:90%;
	padding:0 5%;
	line-height: 0.66rem;
	color:#868997;
	font-size:0.26rem;
}
.confirmArticle{
	width:90%;
	height: auto;
	background: #fff;
	padding:5%;
}
.confirmArticle p:nth-child(1){
	font-size:0.3rem;
	font-weight: 600;
}
.confirmArticle p:nth-child(2){
	font-size:0.24rem;
}
.confirmArticle p:nth-child(3){
	font-size:0.22rem;
	color:#868997;
}
.confirmMedia{
	height:auto;
	width:100%;
	line-height: 0.66rem;
	
}
.confirmMedia p{
	height:0.66rem;
	width:90%;
	padding:0 5%;
	line-height: 0.66rem;
	color:#868997;
	font-size:0.26rem;
}
.confirmMedia span{
	width:45%;
	height: 1.1rem;
	line-height: 1.1rem;
	padding-left:5%;
	background: #fff;
	float:left;
}
.confirmMedia span:nth-child(2){
	font-size:0.3rem;
}
.confirmMedia span:nth-child(3){
	font-size:0.24rem;
}

/*隐藏:报名信息*/
.bg{
	width:100%;
	top:0;
	bottom:0;
	left:0;
	right: 0;
	position: absolute;
	z-index: 999;
	background: rgba(0,0,0,.2);
}
.bg .enrol{
	position: fixed;
	z-index: 1000;
	width:5.57rem;
	height:4.3rem;
	margin-left:0.97rem;
	margin-top:5rem;
	border-radius: 0.1rem;
	background: #fff;
}
.bg .enrol .enrolTitle{
	width:5.57rem;
	height:0.9rem;
	line-height: 0.9rem;
	text-align: center;
	background: #bd0f10;
	font-size:0.32rem;
	color:#fff;
	border-top-left-radius: 0.1rem;
	border-top-right-radius: 0.1rem;
}
.bg .enrol .enrolContent{
	width: 5.57rem;
	height:3.4rem;
	text-align: center;
}
.bg .enrol .enrolContent input{
	width:4.8rem;
	height: 0.66rem;
	background: #e5e5e5;
	border-radius: 0.1rem;
	padding-left: 0.1rem;
}
.bg .enrol .enrolContent input:first-child{
	margin-top: 0.4rem;
	margin-bottom: 0.16rem;
	
}
.bg .enrol .enrolContent input:last-child{
	width:3.22rem;
	height: 0.68rem;
	line-height: 0.68rem;
	background: #1b1b1b;
	color:#fff;
	font-size: 0.3rem;
	margin-top: 0.4rem;
	margin-bottom: 0.16rem;
	padding-left: 0.1rem;
}
